datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}



model test {
  id   String @id @default(uuid())
  name String
  user Int
}

enum Role {
  user
  admin
  super_admin
}

